@model MySQLApp.Models.Product

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="block-12">@Model.Name</h2>
<div class="product-main block-12">
    <div class="block-6">
        <img src="@Url.Action("GetImage","Product", new { id = Model.Image.Id })" class="product-image" alt="err" />
    </div>
    <div class="block-6">
        <p>@Model.Desc</p>
    </div>
    <div class="block-12">
        <span>Ocena - @Model.Rating</span>
        <span>Cena - @Model.Price zł</span>
    </div>
</div>
